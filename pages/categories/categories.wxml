<button bindtap='gotoAddCategory' url="../../pages/categories/categories">新增类别</button>
 
<div class='page list js_show'>
<div class="weui-cells__title">类别列表</div> 
   <div class="weui-cell weui-cell_swiped" wx:for="{{categories}}" wx:for-index="idx" wx:for-item="category"> 
    <div class="weui-cell__bd" style="left:{{record.offsetX}}px" bindtouchstart="recordStart" catchtouchmove="recordMove" bindtouchend="recordEnd"> 
     <p>{{idx+1}}.</p> {{category.name}} 
    </div> 
    <div class="weui-cell__ft"> 
     <view bindtap='removeAction' data-alpha-beta="{{category.id}}">删除</view>
    </div> 
   </div> 
</div>