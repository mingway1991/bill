

<button class="weui-btn mini-btn weui-flex__item" type="primary" size="mini" bindtap='gotoAddCategory'>新增类别</button>
<view class='page list js_show'>
<view class="weui-cells__title">类别列表</view> 
   <view class="weui-cell weui-cell_swiped" wx:for="{{categories}}" wx:for-index="idx" wx:for-item="category"> 
    <view class="weui-cell__bd"> 
     <p>{{idx+1}}.</p> {{category.name}} 
    </view> 
    <view class="weui-cell__ft"> 
     <view bindtap='removeAction' data-alpha-beta="{{category.id}}">删除</view>
    </view> 
   </view> 
</view>